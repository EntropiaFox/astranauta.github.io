{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "fluff-races.json",
	"version": "2.1.1",
	"type": "object",
	"definitions": {
		"raceFluffData": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"images": {
					"oneOf": [
						{
							"type": "array",
							"items": {
								"$ref": "entry.json#/definitions/entryImage"
							}
						},
						{
							"type": "null"
						}
					]
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"uncommon": {
					"type": "boolean"
				},
				"monstrous": {
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"raceFluff": {
			"anyOf": [
				{
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"images": {
							"oneOf": [
								{
									"type": "array",
									"items": {
										"$ref": "entry.json#/definitions/entryImage"
									}
								},
								{
									"type": "null"
								}
							]
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"uncommon": {
							"type": "boolean"
						},
						"monstrous": {
							"type": "boolean"
						}
					},
					"additionalProperties": false,
					"required": [
						"name",
						"source"
					]
				},
				{
					"type": "object",
					"$comment": "This is a custom pre-processor tag, which merges together the array of objects into one. This allows proper inheritance, which JSON schema don't really do.",
					"properties": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						},
						"images": {
							"oneOf": [
								{
									"type": "array",
									"items": {
										"$ref": "entry.json#/definitions/entryImage"
									}
								},
								{
									"type": "null"
								}
							]
						},
						"entries": {
							"type": "array",
							"items": {
								"$ref": "entry.json"
							}
						},
						"uncommon": {
							"type": "boolean"
						},
						"monstrous": {
							"type": "boolean"
						},
						"_copy": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"source": {
									"type": "string"
								},
								"pantheon": {
									"description": "Used in deity data",
									"type": "string"
								},
								"shortName": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"className": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"classSource": {
									"description": "Used in subclass data",
									"type": "string"
								},
								"_mod": {
									"$ref": "util.json#/definitions/_modObject"
								},
								"_trait": {
									"type": "object",
									"properties": {
										"name": {
											"type": "string"
										},
										"source": {
											"type": "string"
										}
									},
									"required": [
										"name",
										"source"
									]
								},
								"_preserve": {
									"type": "object",
									"patternProperties": {
										".*": {
											"type": "boolean"
										}
									}
								}
							},
							"required": [
								"name",
								"source"
							],
							"additionalProperties": false
						}
					},
					"additionalProperties": false,
					"required": [
						"_copy"
					]
				}
			]
		}
	},
	"properties": {
		"raceFluff": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/raceFluff"
			}
		},
		"raceFluffMeta": {
			"type": "object",
			"properties": {
				"uncommon": {
					"$ref": "entry.json"
				},
				"monstrous": {
					"$ref": "entry.json"
				}
			}
		},
		"_meta": {
			"$ref": "util.json#/definitions/metaBlock"
		}
	},
	"additionalProperties": false
}