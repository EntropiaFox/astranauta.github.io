{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "makecards.json",
	"version": "1.0.0",
	"definitions": {
		"itemLookupArray": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"abbreviation": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				},
				"required": [
					"abbreviation"
				],
				"additionalProperties": false
			}
		}
	},
	"type": "object",
	"properties": {
		"reducedItemProperty": {
			"$ref": "#/definitions/itemLookupArray"
		},
		"reducedItemType": {
			"$ref": "#/definitions/itemLookupArray"
		}
	},
	"additionalProperties": false
}