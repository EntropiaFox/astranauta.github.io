{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "fluff-recipes.json",
	"version": "1.1.1",
	"type": "object",
	"properties": {
		"recipeFluff": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"images": {
						"type": "array",
						"items": {
							"$ref": "entry.json#/definitions/entryImage"
						}
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				},
				"required": [
					"name",
					"source"
				],
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}