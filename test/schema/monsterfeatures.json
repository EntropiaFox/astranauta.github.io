{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "monsterfeatures.json",
	"version": "1.1.0",
	"type": "object",
	"properties": {
		"monsterfeatures": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"example": {
						"type": "string"
					},
					"effect": {
						"type": "string"
					},
					"hp": {
						"type": "string"
					},
					"ac": {
						"type": "string"
					},
					"dpr": {
						"type": "string"
					},
					"attackBonus": {
						"type": "string"
					},
					"hasNumberParam": {
						"type": "boolean",
						"description": "Whether this feature requires an automatic input when applied."
					}
				},
				"required": [
					"name",
					"example",
					"effect"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"monsterfeatures"
	],
	"additionalProperties": false
}