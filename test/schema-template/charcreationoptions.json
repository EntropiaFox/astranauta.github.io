{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "charcreationoptions.json",
	"version": "1.1.5",
	"title": "Character Creation Options",
	"type": "object",

	"definitions": {
		"optionType": {
			"type": "string",
			"description": "CS: Character Secret\nDG: Dark Gift\n OF: Optional Feature\n RF:B Replacement Feature: Background\n SG: Supernatural Gift",
			"$$ifSiteElse_key": {
				"keySite": "enum",
				"keyBrew": "examples",
				"value": ["CS", "DG", "OF", "RF:B", "SG"]
			}
		},

		"charoption": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {"$ref": "util.json#/definitions/page"},
				"optionType": {
					"$comment": "Note that this field supports arbitrary strings for homebrew usage.",
					"type": "array",
					"items": {
						"$ref": "#/definitions/optionType"
					}
				},
				"otherSources": {
					"$ref": "util.json#/definitions/otherSources"
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"hasFluff": {"type": "boolean"},
				"hasFluffImages": {"type": "boolean"},
				"prerequisite": {
					"$ref": "util.json#/definitions/prerequisite"
				},
				"$$ifBrew": {
					"fluff": {
						"description": "This is intended to be used for Homebrew only - site data should include a fluff file per source",
						"$ref": "util.json#/definitions/fluffObject"
					},
					"foundryData": {"$ref": "util.json#/definitions/foundryDataObject"},
					"foundryFlags": {"$ref": "util.json#/definitions/foundryFlagsObject"},
					"foundryEffects": {"$ref": "util.json#/definitions/foundryEffectsArray"},
					"foundryImg": {"$ref": "util.json#/definitions/foundryImg"}
				}
			},
			"required": [
				"name",
				"entries",
				"source",
				"optionType"
			],
			"additionalProperties": false
		}
	},

	"properties": {
		"charoption": {
			"type": "array",
			"uniqueItems": true,
			"items": {"$ref": "#/definitions/charoption"}
		}
	},
	"additionalProperties": false
}
